<div class="container">
  <h2><%= @cocktail.name %></h2>

  <ul>
     <% @cocktail.doses.each do |dose| %>
    <li class="list-item"><%= dose.description %>
      <%=dose.ingredient.name %>
      <%= link_to "Remove ingredient",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>

 <%= link_to "Add ingredients & Dose" , new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<%= link_to "Back to Booze Overview", cocktails_path, class: "btn btn-primary" %>
</div>
